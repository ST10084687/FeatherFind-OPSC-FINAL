<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Distance Unit:"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/chewy"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/navy" />

    <Spinner
        android:id="@+id/distanceUnitSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#F0F0F0"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/maximumDistanceEditText"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter Maximum Distance (e.g., 10)"
        android:inputType="numberDecimal"
        android:textColor="#2E86DE"
        tools:ignore="TouchTargetSizeCheck"
        android:minHeight="48dp"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/textborder"

        android:paddingLeft="10dp"
        android:textColorHint="@color/navy"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Save Settings"
        android:textColor="@color/navy"
        android:id="@+id/saveSettingsButton" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="234dp"
        android:layout_marginLeft="90dp"
        android:layout_height="211dp"
        app:srcCompat="@drawable/feather"
        android:alpha="0.5"/>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="322dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="FeatherFind Manual" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:textSize="10sp"
        android:text="1. Register and Login:\n- Register using a username and password.\n- Log in with your registered credentials.\n\n2. Change Settings:\n- Adjust preferences like units and travel distance.\n\n3. View Birding Hotspots:\n- Use the map to find nearby bird-watching locations.\n- Hotspots are filtered by your maximum distance preference.\n\n4. View Current Position:\n- Your current location is displayed on the map.\n\n5. Get Directions:\n- Select a hotspot to visit, and the app will calculate the best route.\n- Directions are visually displayed on the map.\n\n6. Save Bird Observations:\n- Record bird sightings, including species and location.\n- Save observations to your account.\n\n7. View Bird Observations:\n- Access your profile to see a list of all your saved bird observations."
        android:padding="16dp" />

</LinearLayout>
